/**index.wxss**/
.top-info {
  width: 100%;
  min-height: 50px;
  box-shadow: 0px 2px 2px lightgray;
  z-index: 100;
}

.user-info {
  display: flex;
  align-items: center;
}

.user-info .user-avatar {
  display: inline-block;
  height: 40px;
  width: 40px;
  margin: 5px 20px;
}

.user-info .user-nickname {
  display: inline-block;
  margin: 5px;
}

.login-button {
  margin: 0 8px;
  line-height: 2;
}

#tmp-canvas {
  z-index: -1;
  width: 200px;
  height: 200px;
}
