/**index.wxss**/

.top-info {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  min-height: 50px;
  background-color: rgba(255, 255, 255, 0.85);
  box-shadow: 0px 2px 2px lightgray;
  z-index: 100;
}

.user-info {
  display: flex;
  align-items: center;
}

.user-info .user-avatar {
  display: inline-block;
  height: 40px;
  width: 40px;
  margin: 5px 20px;
}

.user-info .user-nickname {
  display: inline-block;
  margin: 5px;
}

.login-button {
  margin: 0 8px;
  line-height: 2;
}

.placeholder {
  height: 50px;
}

.lecture {
  width: 100%;
}

.bottom-tip {
  text-align: center;
  margin: 5px;
  color: lightgrey;
  font-size: 12px;
}

.full-tip {
  border-top: 1px dashed lightgrey;
}

#tmp-canvas {
  z-index: -1;
  width: 200px;
  height: 200px;
}
